<% content_for :header_tags do %>
  <!-- Favicon: hiển thị icon trên tab & bookmark -->
  <link rel="shortcut icon" href="<%= image_path('favicon.ico') %>" type="image/x-icon" />
  <link rel="icon" href="<%= image_path('favicon.ico') %>" type="image/x-icon" />

  <!-- Open Graph – FB, LinkedIn, Slack … -->
  <meta property="og:title"       content="<%= @issue.subject %> – <%= @issue.project.name %>" />
  <meta property="og:description" content="<%= truncate(strip_tags(@issue.description), length: 150) %>" />
  <meta property="og:type"        content="article" />
  <meta property="og:url"         content="<%= Setting.host_name %>/issues/<%= @issue.id %>" />
  <meta property="og:site_name"   content="DONA" />
  <meta property="og:locale"      content="vi_VN" />
  <meta property="og:image"       content="<%= "#{Setting.host_name}/logo.png" %>" />
  <meta property="og:image:alt"   content="Dona Logo" />

  <!-- Twitter Card – X/Twitter -->
  <meta name="twitter:card"        content="summary_large_image" />
  <meta name="twitter:site"        content="@YourSiteHandle" />
  <meta name="twitter:creator"     content="@AuthorHandle" />
  <meta name="twitter:title"       content="<%= @issue.subject %> – <%= @issue.project.name %>" />
  <meta name="twitter:description" content="<%= truncate(strip_tags(@issue.description), length: 150) %>" />
  <meta name="twitter:image"       content="<%= "#{Setting.host_name}/logo.png" %>" />
  <meta name="twitter:image:alt"   content="Dona Logo" />

  <!-- Structured data JSON-LD – SEO & Pinterest -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Article",
      "headline": "<%= j @issue.subject %>",
      "description": "<%= j truncate(strip_tags(@issue.description), length: 150) %>",
      "url": "<%= Setting.host_name %>/issues/<%= @issue.id %>",
      "image": "<%= "#{Setting.host_name}/logo.png" %>",
      "author": { "@type": "Person", "name": "<%= @issue.author.name %>" },
      "publisher": { "@type": "Organization", "name": "Amcolab Dona" }
    }
  </script>

  <!-- SEO cơ bản -->
  <title><%= @issue.subject %> – <%= @issue.project.name %></title>
  <meta name="description" content="<%= truncate(strip_tags(@issue.description), length: 155) %>" />
  <link rel="canonical" href="<%= Setting.host_name %>/issues/<%= @issue.id %>" />
<% end %>

<div class="share-public-content">
  <h2><%= h(@issue.subject) %> (<%= h(@issue.project.name) %>)</h2>
  <p><%= simple_format(truncate(@issue.description, length: 300)) %></p>
  <p><em>(Đây là trang chia sẻ công khai chỉ hiển thị tóm tắt nội dung)</em></p>
</div>
